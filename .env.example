# Telegram Bot
BOT_TOKEN=your_bot_token_from_botfather
BOT_USERNAME=clore_pro_bot

# Database
# For SQLite (default):
DATABASE_URL=sqlite+aiosqlite:///./clore_bot.db
# For PostgreSQL:
# DATABASE_URL=postgresql+asyncpg://user:password@localhost:5432/clore_bot

# Clore API
CLORE_API_BASE_URL=https://api.clore.ai/v1

# OpenAI
OPENAI_API_KEY=your_openai_api_key_here
OPENAI_MODEL=gpt-4-turbo-preview

# Admin Settings
ADMIN_IDS=123456789,987654321

# Exchange Rates (manual rates until auto-update implemented)
CLORE_TO_USD=0.02
BTC_TO_USD=100000

# Monitoring Intervals (seconds)
BALANCE_CHECK_INTERVAL=600
SERVER_CHECK_INTERVAL=300

# Pagination
SERVERS_PER_PAGE=10
ORDERS_PER_PAGE=10

# Limits
MAX_GPU_PER_ORDER=10
MAX_ACTIVE_ORDERS=50

# Features
ENABLE_SPOT_MARKET=true
ENABLE_SERVER_HUNT=true
ENABLE_SOUND_ALERTS=true
ENABLE_PREMIUM_CHECK=false

# Paths
LOG_PATH=logs
DATA_PATH=data